<header class="login-header">

  <h1 class="page-title">Awesome Possum</h1>
</header>

<div class="login-container">
  <h2 id="sign-in-title">Sign In</h2>
  <div class="login-form">
    <%= form_tag login_login_path do %>
      <%= text_field_tag :email, nil, placeholder: "email" %><br>
      <%= password_field_tag :password, nil, placeholder: "password" %><br>
      <%= submit_tag "login" %>
    <% end %>
  </div>
  <div class="register-link">
    Not a user? <%= link_to "Register here", new_author_path %>
  </div>
</div>
