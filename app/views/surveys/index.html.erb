<p id="notice"><%= notice %></p>

<h1 class="dashboard-header">My Surveys</h1>

<div class="dashboard-container">
  <div class="survey-list-container">
    <div class="list-head">
      <ul class="column-titles">
        <li class="list-labels">Author</li>
        <li class="list-labels">Title</li>
        <li class="list-labels">Description</li>
      </ul>
    </div>

    <div class="survey-list">
      <% @surveys.each do |survey| %>
        <ul class="survey-list__item">
          <li class="survey-list__info"><%= survey.author_id %></li>
          <li class="survey-list__info"><%= survey.title %></li>
          <li class="survey-list__info"><%= survey.description %></li>
          <li class="survey-list__link"><%= link_to 'Show', survey %></li>
          <li class="survey-list__link"><%= link_to 'Edit', edit_survey_path(survey) %></li>
          <li class="survey-list__link"><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Survey', new_survey_path, class: 'new-survey__link' %>
