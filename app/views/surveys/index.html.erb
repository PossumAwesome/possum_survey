<p id="notice"><%= notice %></p>

<header class="site-header"><p>Survey Possum</p></header>

<div class="dashboard-header__container">
  <h1 class="dashboard-header">My Surveys</h1>
  <div class="icon-plus"></div>
  <%= link_to 'New Survey', new_survey_path, class: 'new-survey__link' %>
  <div class="icon-logout"></div>
  <%= link_to "Log out", login_logout_path, class: 'logout-button__link' %>
</div>

<div class="dashboard-container">
  <div class="survey-list-container">
    <div class="list-head">
      <div class="column-titles">
        <div class="list-labels">Author</div>
        <div class="list-labels">Title</div>
        <div class="list-labels">Description</div>
      </div>
    </div>

    <div class="survey-list">
      <% @surveys.each do |survey| %>
        <ul class="survey-list__item">
          <li class="survey-list__author"><%= survey.author_id %></li>
          <li class="survey-list__title"><%= survey.title %></li>
          <li class="survey-list__description"><%= survey.description %> <span class="icons"><%= link_to 'm', survey %> <%= link_to 'z', edit_survey_path(survey) %> <%= link_to 't', survey, method: :delete, data: { confirm: 'Are you sure?' } %></span></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<br>
